{
	"name": "server",
	"type": "module",
	"main": "src/index.ts",
	"scripts": {
		"build": "tsdown",
		"check-types": "tsc -b",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
		"dev": "bun run --hot src/index.ts",
		"start": "bun run dist/index.js"
	},
	"dependencies": {
		"hono": "^4.8.2",
		"better-auth": "catalog:",
		"ai": "catalog:",
		"@ai-sdk/google": "^3.0.1",
		"@ai-sdk/devtools": "^0.0.2",
		"dotenv": "catalog:",
		"zod": "catalog:",
		"@townhall/env": "workspace:*",
		"@townhall/auth": "workspace:*",
		"@townhall/db": "workspace:*",
		"@townhall/api": "workspace:*"
	},
	"devDependencies": {
		"@types/bun": "catalog:",
		"typescript": "^5",
		"tsdown": "^0.16.5",
		"@townhall/config": "workspace:*"
	}
}
